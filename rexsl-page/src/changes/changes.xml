<document xmlns="http://maven.apache.org/changes/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
    <body>
        <release version="0.4.13" date="14 Jul 2013" description="Github OAuth authenticator">
            <action dev="yegor" issue="685" type="add">
                Github authentication implemented
            </action>
            <action dev="yegor" issue="699" type="add">
                Dashes in authentication token for readability
            </action>
            <action dev="yegor" issue="700" type="add">
                HTTP Basic authentication implemented
            </action>
            <action dev="yegor" issue="701" type="add">
                AuthInset generates salt as a random set of bytes
            </action>
        </release>
        <release version="0.4.10" date="7 Apr 2013" description="extra features in JaxbBundle">
            <action dev="yegor" issue="660" type="add">
                JaxbBundle accepts links, other bundles, and groups
                as enclosed elements
            </action>
        </release>
        <release version="0.4.9" date="20 Mar 2013" description="module stabilized" />
        <release version="0.4.8" date="15 Mar 2013" description="Insets introduced">
            <action dev="yegor" issue="628" type="add">
                Insets introduced for JAX-RS resources, renderable
                into JAXB pages and JAX-RS responses. First few
                insets implemented, incl. FlashInset, LinksInset, VersionInset,
                Facebook, and Google (for authentication).
            </action>
        </release>
    </body>
</document>
